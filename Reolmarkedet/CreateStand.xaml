      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Reolmarkedet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpretReol">

    <Grid Background="White">
        <Label Content="Oprettelse af Reol" HorizontalAlignment="Center" FontSize="30"/>
        <Label Content="Type" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Name="txtType" HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Opret Reol" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="SaveToFile_Click"/>
        <Button Content="Tilbage" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="BackButton"/>

    </Grid>
</Page>
